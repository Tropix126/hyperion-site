---
import { NavigationHeader } from "~/components";

import "~/styles/theme.css";

export interface Props {
	title: string;
}

const { title } = Astro.props;

const DISCORD_INVITE = "https://discord.gg/nsvwH5xDQM";
const GITHUB_REPO = "https://github.com/zt64/hyperion";
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<NavigationHeader
			client:load
			items={[
				{
					name: "Discord",
					href: DISCORD_INVITE,
					external: true
				},
				{
					name: "GitHub",
					href: GITHUB_REPO,
					external: true
				}
			]}
			title="Hyperion"
		>
			<svg slot="icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 108 108" width="12" height="12">
