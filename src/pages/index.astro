---
import Layout from "~/layouts/Layout.astro";

import { Button, PageSection } from "~/components";
---

<Layout>
    <PageSection id="hero-section">
        <div class="hero-contents">
            <h1>A Modern, Open YouTube Client.</h1>
            <p>
                Hyperion is an open-source, native Android YouTube client with a modern design and advanced capabilities. 
            </p>
            <div class="hero-buttons">
                <Button client:load variant="filled">Get Hyperion</Button>
                <Button client:load variant="elevated">Changelog</Button>
            </div>
        </div>
        <div class="hero-preview-wrapper">
            <img class="hero-preview" src="/hero-preview.png" alt="Hyperion app preview" />
        </div>
    </PageSection>

    <PageSection id="information-section">
        <div class="cards-backdrop"></div>

        <h1>Him</h1>
        <p>prase</p>
        <img src="https://cdn.discordapp.com/attachments/952784046231007334/1018293069650608148/him.png" alt="him" />
    </PageSection>
</Layout>

<style lang="scss">
    :global(#hero-section) {
        overflow: hidden;
        margin-block-start: 62px;
        background-color: var(--primary-container);

        @media (prefers-color-scheme: light) {
            background-image: url("/hero-background-light.jpg");
            background-size: cover;
            background-position: top;
        }

        @media (prefers-color-scheme: dark) {
            background-image: url("/hero-background-dark.jpg");
            background-size: cover;
            background-position: top left;
        }

        :global(.page-section-inner) {
            block-size: 560px;
            display: flex;
            align-items: center;
            justify-content: space-between;
            gap: 48px;

            @media only screen and (max-width: 905px) {
                flex-direction: column;
                block-size: 860px;

                .hero- {
                    &contents {
                        align-items: center;
                        text-align: center;
                        padding: 0;
                        padding-block-start: 72px;
                        p {
                            font-weight: 400;
                        }
                    }
                    &preview-wrapper {
                        inset-block-end: -50px;
                    }
                }
            }
        }
    }

    .hero- {
        &contents {
            box-sizing: border-box;
            padding-block: 82px 48px;
            display: flex;
            flex-direction: column;
            block-size: 100%;
            color: var(--on-surface);
            h1 {
                margin: 0;
                max-inline-size: 16ch;
                font-weight: 500;
                font-size: 57px;
                line-height: 64px;
                letter-spacing: -0.25px;
            }
            p {
                margin-block: 24px;
                max-inline-size: 40ch;
                font-style: normal;
                font-weight: 400;
                font-size: 18px;
                line-height: 24px;
            }
        }
        &buttons {
            margin-top: auto;
            display: flex;
            flex-wrap: wrap;
            gap: 16px;
        }

        &preview {
            inline-size: 100%;
            max-inline-size: 380px;
            transform: rotateY(-2deg);
            &-wrapper {
                position: relative;
                inset-block-end: -40%;
                perspective: 64px;
            }
        }
    }

    // .cards-backdrop {
    //     position: absolute;
    //     inset: 0;
    //     background-color: var(--surface-2);
    //     block-size: 165px;
    //     inline-size: 100%;
    // }

    :global(#information-section) {
        background: var(--surface-1);
    }
</style>